                        </thead>
                        <!--end::Table head-->
                        <!--begin::Table body-->
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>


                                    <!--begin::Author-->
                                    <td class="w-150px w-md-175px m-10">

                                        <!--begin::Avatar-->
                                        <div class="symbol symbol-35px me-3 m-2">
                                            <div>
                                                <span class="text-danger"> @Html.DisplayFor(modelItem => item.companyRegisterNo)</span>
                                            </div>
                                        </div>


                                    </td>
                                    <!--end::Author-->
                                    <!--begin::Title-->
                                    <td>
                                        <div class="text-dark mb-1">
                                            <!--begin::Heading-->

                                            <span>You have a vendor request approval from:  @Html.DisplayFor(modelItem => item.companyName)</span>

                                            <!--end::Heading-->
                                        </div>

                                    </td>
                                    <!--end::Title-->
                                    <!--begin::Date-->
                                    <td class="w-100px text-end fs-7 pe-9">
                                        <span class="fw-bold">  @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.recordDate)) </span>
                                    </td>

                                    <td>
                                        <!--begin::Star-->
                                        <!--begin::Svg Icon | path: icons/duotune/general/gen029.svg-->
                                        @*<input type="button" value="Proceed" class="btn btn-success  btn-sm w-10 p-3 " />*@

                                        <a class="btn btn-success" href="@Url.Action("Proceed", "Inbox",new { id = item.id, companyID=item.companyID})">
                                            Proceed
                                        </a>
                                        @if (item.isDuplicateEntry)
                                        {
                                            <a class="btn btn-danger getAllDUp" id="aDuplicate" title="@item.companyID">
                                                Duplicate
                                            </a>
                                        }



                                    </td>
                                    <!--end::Date-->
                                </tr>
                            }
                        </tbody>
                        <!--end::Table body-->
                    </table>
                    <!--end::Table-->
                </div>
            </div>
            <!--end::Card-->
        </div>
            <!--end::row-->
        </div>
            <!--end::Content-->
        </div>
<!--end::Inbox App - Messages -->


<div class="container">


    <!-- The Modal -->
    <div class="modal fade" id="myModal">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Duplicate Vendor(s)</h4>
                </div>

                <!-- Modal body -->
                <div class="modal-body" id='myModalContent'>

                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" id="closbtn" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>

            </div>
        </div>
    </div>

</div>



