                <!--end::Pagination-->
            </div>
            <div class="col-lg-12">
                <div class="card-header card-header-stretch">
                    <div class="card-title">
                        <h3 class="m-0 text-gray-800">Inbox</h3>
                    </div>
                </div>
                <div class="card-body p-0">
                    <!--begin::Table-->
                    <table class="table table-row-dashed " id="kt_inbox_listing">
                        <!--begin::Table head-->
                        <thead class="d-none">
                            <tr>

                                <th>Actions</th>
                                <th>Author</th>
