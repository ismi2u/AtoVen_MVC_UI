@{
    ViewBag.Title = "Role";
    Layout = "_AdminLayout";

}


<!--begin::Layout-->
<div class="flex-lg-row-fluid">

    <form id="frm" method="post">
        <!--begin::Content-->
        <div class="flex-lg-row-fluid mb-10 mb-lg-0 me-lg-7 me-xl-10">

            <!-- Company Information Start -->
            <!--begin::Card-->
            <div class="card">
                <div class="card-header align-items-center py-5 gap-2 gap-md-5">
                    <!--begin::Actions-->
                    <div class="d-flex flex-wrap gap-1">
                        <h3>Create Role</h3>
                    </div>
                </div>
            </div>
            <div class="card card-docs mb-2">
                <!--begin::Card body-->
                <div class="card-body">
                    <div class="py-5">
                        <div class="row">
                            <div class="mb-5">
                                <div class="col-lg-4">
                                    <div class="fv-row form-floating mb-5">
                                        <input required name="RoleName" type="text" class="form-control border" placeholder="Role Name" id="RoleName" autocomplete="off" />
                                        <label for="RoleName" class="required">Role Name</label>
                                    </div>
                                </div>
                            </div>
                            <div class="mb-5">
                                <div class="col-lg-12">
                                    <button type="button" class="btn btn-sm btn-primary" id="create">Create</button>
                                    <a href="/Role" class="btn btn-sm btn-secondary">Back</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--end::Card body-->
            </div>
            <!--end::Card-->
        </div>
        <!--end::Content-->
    </form>
    <!--end::Form-->
    <!--begin::Sidebar-->
    <!--end::Sidebar-->
</div>
<!--end::Layout-->
